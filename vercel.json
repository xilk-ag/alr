{
  "version": 2,
  "functions": {
    "api/ping.js": {
      "maxDuration": 30
    },
    "api/webhook.js": {
      "maxDuration": 30
    },
    "api/keep-alive.js": {
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/",
      "dest": "/api/ping.js"
    },
    {
      "src": "/ping",
      "dest": "/api/ping.js"
    },
    {
      "src": "/webhook",
      "dest": "/api/webhook.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "crons": [
    {
      "path": "/ping",
      "schedule": "*/5 * * * *"
    }
  ]
} 